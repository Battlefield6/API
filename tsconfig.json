{
    "compilerOptions": {
        "target":                       "ES2020",
        "module":                       "CommonJS",
        "outDir":                       "./dist",
        "lib":                          ["ES2020", "DOM"],
        "strict":                       true,
        "esModuleInterop":              true,
        "skipLibCheck":                 true,
        "resolveJsonModule":            true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution":             "node"
    },
    "include": ["src/**/*", "tests/main.ts"],
    "exclude": ["node_modules"]
}