{
    "compilerOptions": {
        "target":                       "ES2020",
        "module":                       "NodeNext",
        "outDir":                       "./dist",
        "lib":                          ["ES2020", "DOM"],
        "strict":                       true,
        "esModuleInterop":              true,
        "skipLibCheck":                 true,
        "resolveJsonModule":            true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution":             "NodeNext",
        "declaration":                  true,
        "declarationMap":               true,
        "sourceMap":                    true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests", "dist"]
}